		</Grid.ColumnDefinitions>
		<cp:ColorPicker Grid.Row="0" Grid.Column="0" x:Name="customColorPicker" MinWidth="50" MaxWidth="102"></cp:ColorPicker>
	</Grid>
</UserControl>