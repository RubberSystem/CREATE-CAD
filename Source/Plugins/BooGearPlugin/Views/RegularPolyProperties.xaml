<Window x:Class="BooGearPlugin.Views.RegularPolyProperties" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="" Width="349" Height="115" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Topmost="True" WindowStyle="ToolWindow" Loaded="WindowLoaded" Closing="WindowClosing">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/NaroThemeLibrary;component/Themes/NaroTheme.xaml" x:Name="theme" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>


	<StackPanel Orientation="Vertical" Background="{DynamicResource controlGradient}">
		<TextBlock Text="Steps" />
		<TextBox Name="textBoxSteps" KeyUp="OnTextBoxChanged" />
		<StackPanel Orientation="Horizontal">
			<Button Style="{DynamicResource RoundedButton}" Content="OK" Margin="200,2,8,2" Click="OkButtonExecuted" Width="41" />
			<Button Style="{DynamicResource RoundedButton}" Content="Cancel" Margin="2,2,2,2" Click="CancelButtonExecuted"></Button>
		</StackPanel>

	</StackPanel>
</Window>