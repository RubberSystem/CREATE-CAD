<Window x:Class="NaroUiControls.Values.ToolRangeValuesWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="" Width="349" Height="115" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Topmost="True" Loaded="WindowLoaded" WindowStyle="ToolWindow" Closing="WindowClosing">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/NaroThemeLibrary;component/Themes/NaroTheme.xaml" x:Name="theme" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<StackPanel Background="{DynamicResource controlGradient}">
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Size:" Foreground="White" VerticalAlignment="Center" />
			<TextBox Width="275" Margin="20,0,0,0" TextAlignment="Right" KeyUp="TextBoxKeyUp" Name="textBox" Style="{DynamicResource roundTextBox}" Height="28" />
		</StackPanel>
		<Slider Maximum="1" Value="0.5" MouseMove="SliderMouseMove" MouseUp="SliderMouseUp" Name="slider" LargeChange="0.1" SmallChange="0.02" />
		<StackPanel Orientation="Horizontal">
			<Button Style="{DynamicResource RoundedButton}" Content="OK" Margin="200,2,8,2" Click="OkButtonExecuted" Width="41" />
			<Button Style="{DynamicResource RoundedButton}" Content="Cancel" Margin="2,2,2,2" Click="CancelButtonExecuted" />
		</StackPanel>
	</StackPanel>
</Window>