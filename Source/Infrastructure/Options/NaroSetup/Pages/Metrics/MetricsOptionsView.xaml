<?xml version="1.0" encoding="utf-8"?>

<UserControl x:Class="NaroSetup.Pages.Metrics.MetricsOptionsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="335">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/NaroThemeLibrary;component/Themes/NaroTheme.xaml" x:Name="theme" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="25"></RowDefinition>
		</Grid.RowDefinitions>
		<GroupBox x:Name="gb" Header="Metric Units" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Margin="15,5,15,5" Height="Auto">
			<ListBox x:Name="lbMetrics" VerticalAlignment="Stretch" />
		</GroupBox>
	</Grid>
</UserControl>